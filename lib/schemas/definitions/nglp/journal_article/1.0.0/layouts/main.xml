<?xml version="1.0" encoding="UTF-8"?>
<main>
  <templates>
    <detail background="none" show-announcements="false" show-hero-image="false" variant="summary">
      <slots>
        <header>
          <![CDATA[
            {{ entity.title }}
          ]]>
        </header>
        <subheader>
          <![CDATA[
            {{ entity.subtitle }}
          ]]>
        </subheader>
        <summary>
          <![CDATA[
            {{ entity.summary }}
          ]]>
        </summary>
      </slots>
    </detail>
    <link-list background="none" selection-mode="dynamic" show-entity-context="false" show-see-all-button="false" variant="cards">
      <selection-limit>6</selection-limit>
      <selection-source>self</selection-source>
      <dynamic-ordering-definition>
        <filter>
          <schema namespace="nglp" identifier="journal_article"/>
        </filter>
        <order path="entity.published" dir="desc"/>
        <render mode="flat"/>
        <select direct="none">
          <links references="true"/>
        </select>
      </dynamic-ordering-definition>
      <slots>
        <header>Referenced Articles</header>
        <header-aside/>
        <metadata/>
        <subtitle/>
      </slots>
    </link-list>
    <contributor-list background="light">
      <limit>3</limit>
      <slots>
        <header>Contributors</header>
      </slots>
    </contributor-list>
    <ordering background="dark">
      <ordering-source>parent</ordering-source>
      <ordering-identifier>articles</ordering-identifier>
      <selection-source>self</selection-source>
      <slots>
        <previous-label>Previous Article</previous-label>
        <next-label>Next Article</next-label>
      </slots>
    </ordering>
  </templates>
</main>
