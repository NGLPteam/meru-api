<?xml version="1.0" encoding="UTF-8"?>
<list-item>
  <templates>
    <list-item>
      <slots>
        <header>
          {{entity.title}}
        </header>
        <subheader>
          {{entity.subtitle}}
        </subheader>
        <description>
          {% if entity.summary %} {{ entity.summary }} {% endif %}
        </description>
        <meta-a>
          {% if entity.published %} Published {{entity.published}} {% endif %}
        </meta-a>
        <meta-b>
          [[ Issue count ]], [[ Article count ]]
        </meta-b>
        <context-a>
          {% if ancestors.journal %} {{ancestors.journal.title}} {% endif %}
        </context-a>
        <context-b/>
        <context-c/>
      </slots>
    </list-item>
  </templates>
</list-item>
