<?xml version="1.0" encoding="UTF-8"?>
<hero>
  <templates>
    <hero>
      <background>light</background>
      <enable-descendant-browsing>false</enable-descendant-browsing>
      <enable-descendant-search>false</enable-descendant-search>
      <list-contributors>true</list-contributors>
      <show-basic-view-metrics>true</show-basic-view-metrics>
      <show-big-search-prompt>false</show-big-search-prompt>
      <show-breadcrumbs>true</show-breadcrumbs>
      <show-doi>true</show-doi>
      <show-hero-image>false</show-hero-image>
      <show-sharing-link>true</show-sharing-link>
      <show-split-display>true</show-split-display>
      <show-thumbnail-image>false</show-thumbnail-image>
      <slots>
        <big-search-prompt/>
        <descendant-search-prompt/>
        <header>
          {{ ancestors.book.title }}
        </header>
        <header-parent>
          {% if ancestors.series %} {{ancestors.series.title}} {% endif %}
        </header-parent>
        <header-subtitle/>
        <header-aside/>
        <header-sidebar>
          {% if ancestors.book.props.print_isbn.exists %}
            {% sbitem icon: "isbn" %} Print ISBN: {{ ancestors.book.props.print_isbn }} {% endsbitem %}
          {% endif %}
          {% if ancestors.book.props.ebook_isbn.exists %}
            {% sbitem icon: "isbn" %} EBook ISBN: {{ ancestors.book.props.ebook_isbn }} {% endsbitem %}
          {% endif %}
          {% if ancestors.book.props.cc_license.exists %}
            {% sbitem icon: "cc" %} {{ ancestors.book.props.cc_license }} License {% endsbitem %}
          {% endif %}
        </header-sidebar>
        <header-summary/>
        <metadata />
        <sidebar />
        <subheader>
          {{ entity.title }}
        </subheader>
        <subheader-subtitle>
          {{entity.subtitle}}
        </subheader-subtitle>
        <subheader-aside/>
        <summary/>
        <subheader-summary>
          {% if entity.summary %}
            {{ entity.summary }}
          {% endif %}
        </subheader-summary>
        <call-to-action>
          {% if props.online_version.exists %}
            [Online Version]({{ props.online_version.href }})
          {% endif %}
        </call-to-action>
      </slots>
    </hero>
  </templates>
</hero>
