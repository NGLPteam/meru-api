      "wide": true,
      "function": "content"
    },
    {
      "path": "citation",
      "label": "How to Cite",
      "type": "full_text",
      "kind": "markdown",
      "function": "content"
    },
    {
      "path": "online_version",
      "label": "Online Version",
      "type": "url",
      "function": "content"
    },
    {
      "path": "pdf_version",
      "label": "PDF Version",
      "type": "asset",
      "function": "content"
    },
    {
      "path": "book_position",
      "label": "Book Position",
      "type": "integer",
      "orderable": true,
      "function": "sorting"
    },
    {
      "path": "section_position",
      "label": "Section Position",
      "type": "integer",
      "orderable": true,
      "function": "sorting"
    },
    {
      "path": "keywords",
      "label": "Keywords",
      "type": "tags",
      "function": "metadata",
