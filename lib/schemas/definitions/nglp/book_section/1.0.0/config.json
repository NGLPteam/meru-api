{
  "namespace": "nglp",
  "identifier": "book_section",
  "name": "Book Section",
  "version": "1.0.0",
  "kind": "item",
  "parents": [
    {
      "namespace": "nglp",
      "identifier": "book"
    }
  ],
  "children": [
    {
      "namespace": "nglp",
      "identifier": "book_section"
    }
  ],
  "orderings": [
    {
      "id": "sections",
      "name": "sections",
      "filter": {
        "schemas": [
          {
            "namespace": "nglp",
            "identifier": "book_section"
          }
        ]
      },
      "select": {
        "direct": "children"
      },
      "order": [
        {
          "path": "props.section_position#integer",
          "direction": "asc",
          "nulls": "last"
