<?xml version="1.0" encoding="UTF-8"?>
<list-item>
  <templates>
    <list-item>
      <slots>
        <header>
          {{ entity.title }}
        </header>
        <subheader>
          {{ entity.subtitle }}
        </subheader>
        <description>
          {% if entity.summary %} {{ entity.summary }} {% endif %}
        </description>
        <meta-a>
          {%- assign latest_published = orderings.papers.latest_published -%}
          {%- if latest_published -%}
          Last Paper Published {{latest_published | date: "%b %Y"}}
          {%- endif -%}
        </meta-a>
        <meta-b/>
        <context-a/>
        <context-b/>
        <context-c/>
      </slots>
    </list-item>
  </templates>
</list-item>
