<?xml version="1.0" encoding="UTF-8"?>
<hero>
  <templates>
    <hero>
      <background>light</background>
      <enable-descendant-browsing>true</enable-descendant-browsing>
      <enable-descendant-search>true</enable-descendant-search>
      <list-contributors>false</list-contributors>
      <show-basic-view-metrics>false</show-basic-view-metrics>
      <show-big-search-prompt>false</show-big-search-prompt>
      <show-breadcrumbs>true</show-breadcrumbs>
      <show-doi>false</show-doi>
      <show-hero-image>false</show-hero-image>
      <show-issn>false</show-issn>
      <show-sharing-link>true</show-sharing-link>
      <show-split-display>true</show-split-display>
      <show-thumbnail-image>false</show-thumbnail-image>
      <slots>
        <big-search-prompt/>
        <call-to-action/>
        <descendant-search-prompt>
          Search {{entity.title}}
        </descendant-search-prompt>
        <header>
          {{ ancestors.parent.title }}
        </header>
        <header-aside/>
        <header-sidebar/>
        <header-summary/>
        <metadata/>
        <sidebar/>
        <subheader>
          {{ entity.title }}
        </subheader>
        <subheader-aside/>
        <subheader-summary>
          {{ entity.summary }}
        </subheader-summary>
        <summary/>
      </slots>
    </hero>
  </templates>
</hero>
