<?xml version="1.0" encoding="UTF-8"?>
<list-item>
  <templates>
    <list-item>
      <slots>
        <header>
          {{entity.title}}
        </header>
        <subheader>
          {{entity.subtitle}}
        </subheader>
        <description>
          {% if entity.summary %} {{entity.summary}} {% endif %}
        </description>
        <meta-a>
          {% dotlist %}
          {% dotitem %}
          {{orderings.series.count}} Series
          {% enddotitem %}
          {% dotitem %}
          {{orderings.papers.count}} Paper(s)
          {% enddotitem %}
          {% dotitem %}
          {{orderings.units.count}} Sub-unit(s)
          {% enddotitem %}
          {% enddotlist %}
        </meta-a>
        <meta-b/>
        <context-a/>
        <context-b/>
        <context-c/>
      </slots>
    </list-item>
  </templates>
</list-item>
