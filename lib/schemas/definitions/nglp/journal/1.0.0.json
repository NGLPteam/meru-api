{
  "namespace": "nglp",
  "identifier": "journal",
  "name": "Journal",
  "version": "1.0.0",
  "kind": "collection",
  "children": [
    {
      "namespace": "nglp",
      "identifier": "journal_volume"
    },
    {
      "namespace": "nglp",
      "identifier": "journal_issue"
    }
  ],
  "orderings": [
    {
      "id": "articles",
      "name": "Articles",
      "filter": {
        "schemas": [
          {
            "namespace": "nglp",
            "identifier": "journal_article"
          }
        ]
      },
      "select": {
        "direct": "descendants"
      },
      "order": [
        { "path": "entity.published", "direction": "desc" }
      ],
      "position": 3
    },
    {
      "id": "issues",
      "name": "Issues",
      "filter": {
        "schemas": [
          {
            "namespace": "nglp",
            "identifier": "journal_issue"
          }
        ]
      },
      "select": {
        "direct": "descendants"
      },
      "order": [
        { "path": "props.volume.sortable_number#integer", "direction": "desc" },
        { "path": "props.volume.id#string", "direction": "desc" },
        { "path": "props.sortable_number#integer", "direction": "asc" }
      ],
      "position": 2
    },
    {
      "id": "volumes",
      "name": "Volumes",
      "filter": {
        "schemas": [
          {
            "namespace": "nglp",
            "identifier": "journal_volume"
          }
        ]
      },
      "select": {
        "direct": "children"
      },
      "order": [
        { "path": "props.sortable_number#integer", "direction": "desc" },
        { "path": "props.id#string", "direction": "desc" }
      ],
      "position": 1
    }
  ],
  "properties": [
    { "path": "description", "label": "Description", "type": "full_text", "required": false, "function": "presentation" },
    { "type": "boolean", "path": "peer_reviewed", "label": "Peer Reviewed", "function": "metadata" },
    { "type": "boolean", "path": "open_access", "label": "Open Access", "function": "metadata" },
    {
      "type": "select",
      "path": "cc_license",
      "label": "CC License",
      "options": [
        {
          "label": "CC BY",
          "value": "CC BY"
        },
        {
          "label": "CC BY-SA",
          "value": "CC BY-SA"
        },
        {
          "label": "CC BY-NC",
          "value": "CC BY-NC"
        },
        {
          "label": "CC BY-NC-SA",
          "value": "CC BY-NC-SA"
        },
        {
          "label": "CC BY-ND",
          "value": "CC BY-ND"
        },
        {
          "label": "CC BY-NC-ND",
          "value": "CC BY-NC-ND"
        }
      ]
    }
  ]
}
