{
  "namespace": "nglp",
  "identifier": "journal_issue",
  "name": "Journal Issue",
  "version": "1.0.0",
  "kind": "collection",
  "ancestors": [
    {
      "name": "volume",
      "namespace": "nglp",
      "identifier": "journal_volume",
      "required": false
    },
    {
      "name": "journal",
      "namespace": "nglp",
      "identifier": "journal",
      "required": true
    }
  ],
  "parents": [
    {
      "namespace": "nglp",
      "identifier": "journal_volume"
    },
    {
      "namespace": "nglp",
      "identifier": "journal"
    }
  ],
  "children": [
    {
      "namespace": "nglp",
      "identifier": "journal_article"
    }
  ],
  "core": {
    "issn": true
  },
  "orderings": [
    {
      "id": "articles",
      "name": "Articles",
      "filter": {
        "schemas": [
          {
            "namespace": "nglp",
            "identifier": "journal_article"
          }
        ]
      },
      "select": {
        "direct": "children"
      },
      "order": [
        { "path": "entity.published", "direction": "desc" },
        { "path": "props.meta.collected#variable_date", "direction": "desc" },
        { "path": "props.issue.fpage#integer", "direction": "asc" },
        { "path": "props.issue.lpage#integer", "direction": "asc" }
      ],
      "position": 1
    }
  ],
  "properties": [
    {
      "path": "volume",
      "legend": "Volume Metadata",
      "properties": [
        { "path": "id", "label": "ID", "type": "string", "function": "metadata" },
        { "path": "sortable_number", "label": "Sortable Number", "type": "integer", "function": "sorting" }
      ],
      "type": "group"
    },
    { "path": "number", "label": "Number", "type": "string", "function": "metadata" },
    { "path": "sortable_number", "label": "Sortable Number", "type": "integer", "function": "sorting" },
    { "path": "id", "label": "Identifier", "type": "string", "function": "metadata" }
  ]
}
