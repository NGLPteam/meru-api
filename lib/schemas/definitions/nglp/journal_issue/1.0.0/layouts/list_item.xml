<?xml version="1.0" encoding="UTF-8"?>
<list-item>
  <templates>
    <list-item>
      <ordering-identifier>articles</ordering-identifier>
      <selection-limit>5</selection-limit>
      <selection-mode>named</selection-mode>
      <selection-source>self</selection-source>
      <entity-context>none</entity-context>
      <slots>
        <header>
          {{entity.title}}
        </header>
        <subheader>
          {{entity.subtitle}}
        </subheader>
        <description>
          {% if entity.summary %}
          {{entity.summary}}
          {% endif %}
        </description>
        <meta-a>
          {% if entity.published %}
          Published {{entity.published}}
          {% endif %}
        </meta-a>
        <meta-b>
          {{orderings.articles.count}} {% if orderings.articles.count == 1 %}Article{% else %}Articles{% endif %}
        </meta-b>
        <context-full>
          {% if ancestors.volume %}
            {{ancestors.journal.title}}, {{ancestors.volume.title}}
          {% else %}
            {{ancestors.journal.title}}
          {% endif %}
        </context-full>
        <context-abbr>
          {{ancestors.volume.title}}
        </context-abbr>
      </slots>
    </list-item>
  </templates>
</list-item>
