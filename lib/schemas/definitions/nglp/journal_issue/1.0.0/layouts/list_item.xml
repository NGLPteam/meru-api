<?xml version="1.0" encoding="UTF-8"?>
<list-item>
  <templates>
    <list-item>
      <slots>
        <header>
          {{entity.title}}
        </header>
        <subheader>
          {{entity.subtitle}}
        </subheader>
        <description>
          {% if entity.summary %} {{ entity.summary }} {% endif %}
        </description>
        <meta-a>
          {% if entity.published %} Published {{entity.published}} {% endif %}
        </meta-a>
        <meta-b>
          [[ Article count ]]
        </meta-b>
        <context-a>
          {% if ancestors.volume or ancestors.journal %}
            {% assign journal = ancestors.journal.title | split: "*" %}
            {% assign volume = ancestors.volume.title | split: "*" %}
            {% assign ancestors = journal | concat: volume %}
            {{ ancestors | join: ", " }}
          {% endif %}
        </context-a>
        <context-b/>
        <context-c/>
      </slots>
    </list-item>
  </templates>
</list-item>
