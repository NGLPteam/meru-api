<?xml version="1.0" encoding="UTF-8"?>
<list-item>
  <templates>
    <list-item>
      <slots>
        <header>
          {{entity.title}}
        </header>
        <subheader>
          {{entity.subtitle}}
        </subheader>
        <description>
          {% if entity.summary %}
          {{entity.summary}}
          {% endif %}
        </description>
        <meta-a>
          {% if entity.published %}
          Published {{entity.published}}
          {% endif %}
        </meta-a>
        <meta-b>
          {{ordering.articles.count}}
        </meta-b>
        <context-full>
          {{ancestors.journal.title}}, {{ancestors.journal}}
        </context-full>
        <context-abbr>
          {{ancestors.volume.title}}
        </context-abbr>
        <context-a>
          {{ancestors.journal.title}}
        </context-a>
        <context-b>
          {{ancestors.volume.title}}
        </context-b>
        <context-c/>
      </slots>
    </list-item>
  </templates>
</list-item>
