<?xml version="1.0" encoding="UTF-8"?>
<main>
  <templates>
    <descendant-list>
      <background>none</background>
      <ordering-identifier>articles</ordering-identifier>
      <see-all-button-label>See All Articles</see-all-button-label>
      <selection-limit>40</selection-limit>
      <selection-mode>named</selection-mode>
      <selection-source>self</selection-source>
      <show-entity-context>false</show-entity-context>
      <show-hero-image>false</show-hero-image>
      <show-see-all-button>true</show-see-all-button>
      <title>Articles</title>
      <variant>summary</variant>
      <width>half</width>
      <slots>
        <header>
          Articles
        </header>
        <header-aside/>
        <metadata/>
        <subtitle/>
      </slots>
    </descendant-list>
    <page-list>
      <background>none</background>
      <width>half</width>
      <slots>
        <header>
          Pages
        </header>
      </slots>
    </page-list>
    <contributor-list>
      <background>light</background>
      <limit>3</limit>
      <slots>
        <header>
          Contributors
        </header>
      </slots>
    </contributor-list>
    <ordering>
      <background>dark</background>
      <ordering-source>parent</ordering-source>
      <selection-source>self</selection-source>
      <slots>
        <previous-label>
          Previous Issue
        </previous-label>
        <next-label>
          Next Issue
        </next-label>
      </slots>
    </ordering>
  </templates>
</main>
