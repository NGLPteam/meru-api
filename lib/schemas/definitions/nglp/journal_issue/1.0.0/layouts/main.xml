<?xml version="1.0" encoding="UTF-8"?>
<main>
  <templates>
    <descendant-list>
      <background>none</background>
      <ordering-identifier>articles</ordering-identifier>
      <see-all-button-label/>
      <selection-limit/>
      <selection-mode>named</selection-mode>
      <selection-source>self</selection-source>
      <show-entity-context>false</show-entity-context>
      <show-hero-image>false</show-hero-image>
      <show-see-all-button>false</show-see-all-button>
      <title/>
      <variant>summary</variant>
      <width>full</width>
      <slots>
        <header>Articles</header>
        <header-aside/>
        <metadata/>
        <subtitle/>
      </slots>
    </descendant-list>
    <contributor-list>
      <background>light</background>
      <limit>4</limit>
      <slots>
        <header>
          Contributors
        </header>
      </slots>
    </contributor-list>
    <ordering>
      <background>light</background>
      <ordering-source>parent</ordering-source>
      <selection-source>self</selection-source>
      <slots>
        <previous-label>
          Previous Issue
        </previous-label>
        <next-label>
          Next Issue
        </next-label>
      </slots>
    </ordering>
    <link-list>
      <background>light</background>
      <dynamic-ordering-definition>
        <filter>
          <schema namespace="nglp" identifier="journal_issue"/>
        </filter>
        <order path="entity.published" dir="desc"/>
        <select direct="descendants">
          <links references="true" />
        </select>
      </dynamic-ordering-definition>
      <title/>
      <selection-limit>8</selection-limit>
      <selection-mode>dynamic</selection-mode>
      <selection-source>self</selection-source>
      <variant>grid</variant>
      <slots>
        <header>Related Issues</header>
        <header-aside/>
        <metadata/>
        <subtitle/>
      </slots>
    </link-list>
  </templates>
</main>
