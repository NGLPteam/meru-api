<?xml version="1.0" encoding="UTF-8"?>
<main>
  <templates>
    <detail>
      <background>none</background>
      <show-announcements>false</show-announcements>
      <show-body>false</show-body>
      <show-hero-image>false</show-hero-image>
      <variant>summary</variant>
      <slots>
        <header>
          {{ entity.title }}
        </header>
        <subheader>
          {{ entity.subtitle }}
        </subheader>
        <summary>
          {{ entity.summary }}
        </summary>
        <body/>
      </slots>
    </detail>
    <descendant-list>
      <background>none</background>
      <manual-list-name>manual</manual-list-name>
      <see-all-button-label>See All</see-all-button-label>
      <selection-fallback-mode>manual</selection-fallback-mode>
      <selection-limit>3</selection-limit>
      <selection-mode>manual</selection-mode>
      <selection-source>self</selection-source>
      <entity-context>none</entity-context>
      <show-hero-image>false</show-hero-image>
      <use-selection-fallback>false</use-selection-fallback>
      <variant>cards</variant>
      <slots>
        <header>
          Descendants
        </header>
        <header-aside/>
        <metadata>
          Published {{ entity.published }}
        </metadata>
        <subtitle/>
      </slots>
    </descendant-list>
    <link-list>
      <background>none</background>
      <manual-list-name>manual</manual-list-name>
      <see-all-button-label>See All</see-all-button-label>
      <selection-fallback-mode>manual</selection-fallback-mode>
      <selection-limit>3</selection-limit>
      <selection-mode>manual</selection-mode>
      <selection-source>self</selection-source>
      <entity-context>none</entity-context>
      <show-hero-image>false</show-hero-image>
      <use-selection-fallback>false</use-selection-fallback>
      <variant>cards</variant>
      <slots>
        <header>
          Links
        </header>
        <header-aside/>
        <metadata>
          Published {{ entity.published }}
        </metadata>
        <subtitle/>
      </slots>
    </link-list>
    <page-list>
      <background>none</background>
      <slots>
        <header>
          Pages
        </header>
      </slots>
    </page-list>
    <contributor-list>
      <background>none</background>
      <limit>3</limit>
      <slots>
        <header>
          Contributors
        </header>
      </slots>
    </contributor-list>
    <ordering>
      <background>none</background>
      <ordering-source>parent</ordering-source>
      <selection-source>self</selection-source>
      <slots>
        <previous-label>
          Previous Entity
        </previous-label>
        <next-label>
          Next Entity
        </next-label>
      </slots>
    </ordering>
  </templates>
</main>
