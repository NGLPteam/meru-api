{
  "namespace": "default",
  "identifier": "community",
  "name": "Default Community",
  "version": "1.0.0",
  "kind": "community",
  "orderings": [
    {
      "id": "series",
      "name": "Series",
      "filter": {
        "schemas": [
          {
            "namespace": "nglp",
            "identifier": "series"
          }
        ]
      },
      "select": {
        "direct": "descendants"
      },
      "order": [
        { "path": "entity.title", "direction": "asc" }
      ],
      "render": {
        "mode": "tree"
      },
      "position": 1
    },
    {
      "id": "units",
      "name": "Units",
      "filter": {
        "schemas": [
          {
            "namespace": "nglp",
            "identifier": "unit"
          }
        ]
      },
      "select": {
        "direct": "descendants"
      },
      "order": [
        { "path": "entity.title", "direction": "asc" }
      ],
      "render": {
        "mode": "tree"
      },
      "position": 2
    },
    {
      "id": "etd",
      "name": "Electronic Theses and Dissertations",
      "filter": {
        "schemas": [
          {
            "namespace": "nglp",
            "identifier": "dissertation"
          }
        ]
      },
      "select": {
        "direct": "children",
        "links": {
          "contains": true
        }
      },
      "order": [
        { "path": "props.issued#variable_date", "direction": "desc", "nulls": "last" },
        { "path": "entity.title", "direction": "asc" }
      ],
      "position": 3
    }
  ],
  "properties": [
    {
      "type": "group", "path": "featured",
      "legend": "Featured",
      "properties": [
        {
          "path": "series", "type": "entities",
          "label": "Series",
          "scope": {
            "origin": "self",
            "target": "descendants",
            "schemas": [
              { "namespace": "nglp", "identifier": "series" }
            ]
          }
        },
        {
          "path": "journals", "type": "entities",
          "label": "Journals",
          "scope": {
            "origin": "self",
            "target": "descendants",
            "schemas": [
              { "namespace": "nglp", "identifier": "journal" }
            ]
          }
        },
        {
          "path": "issue", "type": "entity",
          "label": "Issue",
          "scope": {
            "origin": "self",
            "target": "descendants",
            "schemas": [
              { "namespace": "nglp", "identifier": "journal_issue" }
            ]
          }
        }
      ]
    }
  ]
}
