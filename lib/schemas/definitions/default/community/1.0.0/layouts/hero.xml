<?xml version="1.0" encoding="UTF-8"?>
<hero>
  <templates>
    <hero>
      <background>dark</background>
      <enable-descendant-browsing>true</enable-descendant-browsing>
      <enable-descendant-search>false</enable-descendant-search>
      <list-contributors>false</list-contributors>
      <show-basic-view-metrics>false</show-basic-view-metrics>
      <show-big-search-prompt>true</show-big-search-prompt>
      <show-breadcrumbs>false</show-breadcrumbs>
      <show-doi>false</show-doi>
      <show-hero-image>true</show-hero-image>
      <show-issn>false</show-issn>
      <show-sharing-link>false</show-sharing-link>
      <show-split-display>false</show-split-display>
      <show-thumbnail-image>false</show-thumbnail-image>
      <slots>
        <big-search-prompt>
          What are you looking for?
        </big-search-prompt>
        <header>
          {{ entity.tagline }}
        </header>
        <header-summary>{{ entity.summary }}</header-summary>
        <header-aside/>
        <header-sidebar/>
        <subheader/>
        <subheader-aside/>
        <subheader-summary/>
        <sidebar/>
        <metadata/>
        <summary/>
        <call-to-action/>
      </slots>
    </hero>
  </templates>
</hero>
