<?xml version="1.0" encoding="UTF-8"?>
<list-item>
  <templates>
    <list-item>
      <slots>
        <header>
          {{ entity.title }}
        </header>
        <subheader>
          {{ entity.subtitle }}
        </subheader>
        <description>
          {% if entity.summary %} {{ entity.summary }} {% endif %}
        </description>
        <meta-a>
          {% if entity.published %} Published {{ entity.published }} {% endif %}
        </meta-a>
        <meta-b/>
        <context-full>
          {% if parent.title %}
            {{ parent.title }}
          {% endif %}
        </context-full>
      </slots>
    </list-item>
  </templates>
</list-item>
